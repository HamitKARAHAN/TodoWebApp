@model WorkCreateDto

<form asp-action="Create" asp-controller="Todo" method="post">
    <div class="row row-cols-lg-auto g-3 mb-4 pb-2 mt-3">
        <div class="form-outline">
            <label style="display:inline-block; width:100px; text-align:right;" asp-for="Title">Title :</label>
            <input asp-for="Title" placeholder="eg: Shopping" />
        </div>
    </div>
    <div class="row row-cols-lg-auto g-3 mb-4 pb-2">

        <div class="form-outline">
            <label style="display:inline-block; width:100px; text-align:right;"  asp-for="Description">Description :</label>
            <input asp-for="Description" placeholder="Enter a task here" />
        </div>

    </div>
    <div class="row row-cols-lg-auto g-3 mb-4 pb-2">
        <div class="form outline form check">
            <label style="display:inline-block; width:100px; text-align:right;" class="form-check-label" asp-for="IsCompleted">Completed :</label>
            <input class="form-check-input" type="checkbox" asp-for="IsCompleted">
            
        </div>
    </div>
    <div style="display:inline-block; width:100px; text-align:right;" class="row row-cols-lg-auto g-3 mb-4 pb-2">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    <div asp-validation-summary="All" class="text-danger" ></div>
</form>